<!-- Contact Form -->
<section id="contact" class="scroll-mt-8">
    <div class="border-t border-neutral-700 pt-12">
        <h2 class="font-oswald text-4xl uppercase mb-6">Get In Touch</h2>
        <p class="font-inter text-neutral-300 mb-8">Ready to start the conversation? Fill out the form below and we'll get back to you within 48 hours.</p>

        <form action="https://formsubmit.co/starsandgartersclub@gmail.com" method="POST" class="max-w-3xl">
            <input type="hidden" name="_subject" value="New Booking Inquiry">
            <input type="hidden" name="_next" value="https://starsandgartersclub.com/booking/?thanks=1">

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                    <label for="name" class="block font-inter text-sm mb-2">Name *</label>
                    <input type="text" id="name" name="name" required
                        class="w-full bg-neutral-900 border border-neutral-700 px-4 py-3 font-inter focus:outline-none focus:border-white">
                </div>

                <div>
                    <label for="email" class="block font-inter text-sm mb-2">Email *</label>
                    <input type="email" id="email" name="email" required
                        class="w-full bg-neutral-900 border border-neutral-700 px-4 py-3 font-inter focus:outline-none focus:border-white">
                </div>

                <div>
                    <label for="phone" class="block font-inter text-sm mb-2">Phone</label>
                    <input type="tel" id="phone" name="phone"
                        class="w-full bg-neutral-900 border border-neutral-700 px-4 py-3 font-inter focus:outline-none focus:border-white">
                </div>

                <div>
                    <label for="company" class="block font-inter text-sm mb-2">Organization / Production Company</label>
                    <input type="text" id="company" name="company"
                        class="w-full bg-neutral-900 border border-neutral-700 px-4 py-3 font-inter focus:outline-none focus:border-white">
                </div>
            </div>

            <div class="mb-6">
                <label class="block font-inter text-sm mb-3">I'm interested in: *</label>
                <div class="flex flex-wrap gap-6">
                    <label class="flex items-center gap-2 font-inter cursor-pointer">
                        <input type="radio" name="inquiry_type" value="Renting Space" required class="accent-white">
                        <span>Renting Space</span>
                    </label>
                    <label class="flex items-center gap-2 font-inter cursor-pointer">
                        <input type="radio" name="inquiry_type" value="Collaboration" class="accent-white">
                        <span>Collaboration</span>
                    </label>
                    <label class="flex items-center gap-2 font-inter cursor-pointer">
                        <input type="radio" name="inquiry_type" value="Hiring Talent" class="accent-white">
                        <span>Hiring Talent</span>
                    </label>
                    <label class="flex items-center gap-2 font-inter cursor-pointer">
                        <input type="radio" name="inquiry_type" value="Other" class="accent-white">
                        <span>Something Else</span>
                    </label>
                </div>
            </div>

            <div class="mb-6">
                <label for="dates" class="block font-inter text-sm mb-2">Preferred Date(s)</label>
                <input type="text" id="dates" name="dates" placeholder="e.g., March 15, 2026 or Saturdays in April"
                    class="w-full bg-neutral-900 border border-neutral-700 px-4 py-3 font-inter focus:outline-none focus:border-white">
            </div>

            <div class="mb-8">
                <label for="message" class="block font-inter text-sm mb-2">Tell us about your project *</label>
                <textarea id="message" name="message" rows="5" required placeholder="What are you looking to create? What's your vision?"
                    class="w-full bg-neutral-900 border border-neutral-700 px-4 py-3 font-inter focus:outline-none focus:border-white resize-none"></textarea>
            </div>

            <button type="submit" class="bg-white text-black font-inter font-semibold px-8 py-4 hover:bg-neutral-200 transition-colors">
                Send Inquiry
