<form action="https://formsubmit.co/starsandgartersclub@gmail.com" method="POST" class="w-full">
    <input type="hidden" name="_subject" value="New Booking Request">
    <input type="hidden" name="_next" value="https://starsandgartersclub.com/booking/?thanks=1">

    <div class="w-full grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
        <div>
            <label for="name" class="block font-inter text-sm mb-2">Name</label>
            <input type="text" id="name" name="name" required
                class="w-full bg-neutral-900 border border-neutral-700 px-4 py-3 font-inter focus:outline-none focus:border-white">
        </div>

        <div>
            <label for="email" class="block font-inter text-sm mb-2">Email</label>
            <input type="email" id="email" name="email" required
                class="w-full bg-neutral-900 border border-neutral-700 px-4 py-3 font-inter focus:outline-none focus:border-white">
        </div>

        <div>
            <label for="phone" class="block font-inter text-sm mb-2">Phone</label>
            <input type="tel" id="phone" name="phone" required
                class="w-full bg-neutral-900 border border-neutral-700 px-4 py-3 font-inter focus:outline-none focus:border-white">
        </div>

        <div>
            <label for="company" class="block font-inter text-sm mb-2">Production Company</label>
            <input type="text" id="company" name="company" required
                class="w-full bg-neutral-900 border border-neutral-700 px-4 py-3 font-inter focus:outline-none focus:border-white">
        </div>

        <div>
            <label for="dates" class="block font-inter text-sm mb-2">Date(s) Requested</label>
            <input type="text" id="dates" name="dates" required
                class="w-full bg-neutral-900 border border-neutral-700 px-4 py-3 font-inter focus:outline-none focus:border-white">
        </div>

        <div>
            <label for="time" class="block font-inter text-sm mb-2">Preferred Time (if any)</label>
            <input type="text" id="time" name="time"
                class="w-full bg-neutral-900 border border-neutral-700 px-4 py-3 font-inter focus:outline-none focus:border-white">
        </div>
    </div>

    <div class="mb-6">
        <label class="block font-inter text-sm mb-2">Which room are you interested in booking?</label>
        <div class="flex gap-6">
            <label class="flex items-center gap-2 font-inter cursor-pointer">
                <input type="radio" name="room" value="mainstage" required class="accent-white">
                <span>Mainstage</span>
            </label>
            <label class="flex items-center gap-2 font-inter cursor-pointer">
                <input type="radio" name="room" value="rouge-room" class="accent-white">
                <span>Rouge Room</span>
            </label>
        </div>
    </div>

    <button type="submit" class="bg-white text-black font-inter font-medium px-6 py-3 hover:bg-neutral-200 transition-colors">
        Submit
    </button>
</form>
